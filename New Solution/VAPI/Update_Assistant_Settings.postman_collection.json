					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"backchannelingEnabled\": true,\n  \"backgroundDenoisingEnabled\": true,\n  \"transcriber\": {\n    \"model\": \"nova-3\",\n    \"language\": \"en-AU\",\n    \"provider\": \"deepgram\",\n    \"confidenceThreshold\": 0.6,\n    \"endpointing\": 500\n  },\n  \"startSpeakingPlan\": {\n    \"waitSeconds\": 0.8,\n    \"smartEndpointingEnabled\": \"livekit\"\n  }\n}"
